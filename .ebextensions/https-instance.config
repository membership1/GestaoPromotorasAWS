files:
  "/etc/nginx/conf.d/https_redirect.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      server {
          listen 80;
          server_name _;
          return 301 https://$host$request_uri;
      }

  "/etc/nginx/conf.d/ssl_custom.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      server {
          listen 443 ssl;
          server_name _;

          ssl_certificate /etc/letsencrypt/live/gestaopromo.com.br/fullchain.pem;
          ssl_certificate_key /etc/letsencrypt/live/gestaopromo.com.br/privkey.pem;

          location / {
              proxy_pass http://127.0.0.1:5000;
              proxy_set_header Host $host;
              proxy_set_header X-Real-IP $remote_addr;
              proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
              proxy_set_header X-Forwarded-Proto $scheme;
          }
      }
